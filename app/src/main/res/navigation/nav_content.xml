<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_content"
    app:startDestination="@id/listMessageFragment">

    <fragment
        android:id="@+id/listMessageFragment"
        android:name="com.example.appchatkl.ui.content.listMessage.ListMessageFragment"
        android:label="list_message_fragment"
        tools:layout="@layout/list_message_fragment" >
        <action
            android:id="@+id/action_listMessageFragment_to_friendFragment"
            app:destination="@id/friendFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendFragment"
        android:name="com.example.appchatkl.ui.content.friend.friend.FriendFragment"
        android:label="friend_fragment"
        tools:layout="@layout/friend_fragment" >
        <action
            android:id="@+id/action_friendFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.appchatkl.ui.content.user.UserFragment"
        android:label="user_fragment"
        tools:layout="@layout/user_fragment" />
</navigation>